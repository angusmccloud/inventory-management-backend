{
  "name": "inventory-management-backend",
  "version": "1.0.0",
  "description": "Family Inventory Management System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp package.json package-lock.json dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "sam:build": "sam build",
    "sam:deploy": "sam build && sam deploy",
    "sam:local": "sam local start-api",
    "sam:deploy:guided": "sam build && sam deploy --guided"
  },
  "keywords": [
    "inventory",
    "aws",
    "lambda",
    "dynamodb",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.948.0",
    "@aws-sdk/client-dynamodb": "^3.705.0",
    "@aws-sdk/client-lambda": "^3.958.0",
    "@aws-sdk/client-secrets-manager": "^3.948.0",
    "@aws-sdk/client-ses": "^3.705.0",
    "@aws-sdk/client-ssm": "^3.948.0",
    "@aws-sdk/lib-dynamodb": "^3.705.0",
    "@aws-sdk/util-dynamodb": "^3.705.0",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
